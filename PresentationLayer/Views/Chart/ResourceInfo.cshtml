            </td>
            <td>
                Booked by: @Html.DisplayFor(modelItem => item.MondayRates.BookedBy.Forename)
                Number of attendees: @Html.DisplayFor(modelItem => item.MondayRates.NumberOfAttendees)
            </td>
            <td>
                Booked by: @Html.DisplayFor(modelItem => item.MondayRates.BookedBy.Forename)
                Number of attendees: @Html.DisplayFor(modelItem => item.MondayRates.NumberOfAttendees)
            </td>
        </tr>
    }
