@model PresentationLayer.Models.ResourceViewModel

@{
    ViewBag.Title = "ResourceInfo";
    Layout = "~/Views/Home/_AdminNavigation.cshtml";
}


<h2>Resource Info</h2>

<body>
    <fieldset>
        <legend>ResourceViewModel</legend>
    
        <div class="display-label">
             @Html.DisplayNameFor(model => model.Frequency)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Frequency)
        </div>
    
        <div class="display-label">
             @Html.DisplayNameFor(model => model.Occupancy)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Occupancy)
        </div>
    
        <div class="display-label">
             @Html.DisplayNameFor(model => model.Utilisation)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Utilisation)
        </div>
    </fieldset>

