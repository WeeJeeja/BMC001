@model PresentationLayer.Models.Booking

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="~/Scripts/testing.js"></script>

@using (Ajax.BeginForm("RetrieveAvailableResources", "Booking", new AjaxOptions()
    {
        InsertionMode = InsertionMode.Replace, 
        UpdateTargetId = "resources",
    }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Booking</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Slots)
        </div>
        <div class="editor-field">
            @Html.DropDownList("Slot",
                       new SelectList(Model.Slots, "SlotId", "Time"))
            @Html.ValidationMessageFor(model => model.Slots)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.Capacity)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Capacity)
            @Html.ValidationMessageFor(model => model.Capacity)
        </div>

        <p>
            <input type="submit" value="Filter" />

        </p>
    </fieldset>
}

    @*List of resources available*@
        <div id="resources"></div>
        @Html.Partial("_resources")

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>

