            TemplateInfo = new TemplateInfo { HtmlFieldPrefix = "GroupBooking.Teams" }
        })

    </p>
  </div>
  <h3>      Add Attendees</h3>
  <div>
    <p>
        @*@Html.Partial("_groupAttendees", Model.GroupBooking.Attendees, new ViewDataDictionary(ViewData)
        {
            TemplateInfo = new TemplateInfo { HtmlFieldPrefix = "GroupBooking.Attendees" }
        })*@
        @Html.Partial("_groupAttendees", Model)
    </p>
  </div>
  <h3>  Booking criteria</h3>
  <div>
    <p>
        @Html.Partial("_groupBookingCriteria", Model)
    </p>
    <ul>
      <li>LNeed to check attendess + all team memebers is less than capacity</li>
      <li>List item two</li>
      <li>List item three</li>
    </ul>
  </div>
</div>

    <p>
        @Html.HiddenFor(m => m.GroupBooking.Teams)
        @Html.HiddenFor(m => m.GroupBooking.Attendees)
        
        <input type="submit" value="Filter" />
    </p>
}

     @*List of resources available*@
        <div id="groupResources">
        @Html.Partial("_groupResources")
        </div>
 
 
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

