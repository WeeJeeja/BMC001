@model IEnumerable<PresentationLayer.Models.TimetableEntry>

@{
    ViewBag.Title = "Timetable3";
}

<h2>Resource allocation</h2>

<button type="button" class="btn btn-success">
    @Html.ActionLink("Create new booking", "Create")
</button>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MondayResource)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TuesdayResource)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WednesdayResource)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThursdayResource)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FridayResource)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MondayResource)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TuesdayResource)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WednesdayResource)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThursdayResource)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FridayResource)
        </td>
    </tr>
}

</table>
