@model PresentationLayer.Models.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Home/_AdminNavigation.cshtml";
}

<h2>Details for @Model.EmployeeNumber</h2>


<div class="container">
    <form>
        <div class="form-group">
            <label class="control-label col-sm-2">
                @Html.DisplayNameFor(model => model.EmployeeNumber)
            </label>
            <div class="col-sm-10">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.EmployeeNumber)
            </p>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">
                @Html.DisplayNameFor(model => model.Forename)
            </label>
            <div class="col-sm-10">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.Forename)
            </p>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">
                @Html.DisplayNameFor(model => model.Surname)
            </label>
            <div class="col-sm-10">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.Surname)
            </p>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">
                @Html.DisplayNameFor(model => model.IsLineManager)
            </label>
            <div class="col-sm-10">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.IsLineManager)
            </p>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">
                @Html.DisplayNameFor(model => model.IsAdministrator)
            </label>
            <div class="col-sm-10">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.IsAdministrator)
            </p>
            </div>
        </div>

    </form>

    <button type="button" class="btn btn-info">
        @Html.ActionLink("Edit", "Edit", new { userId=Model.UserId })
    </button>
    <button type="button" class="btn btn-default">
        @Html.ActionLink("Back to List", "Index")
    </button>
</div>


