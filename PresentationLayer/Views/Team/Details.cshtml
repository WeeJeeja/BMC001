@model PresentationLayer.Models.Team

@{
    ViewBag.Title = "Details";
}


<div class="container">
  <h2>@Model.Name</h2>
  <ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#team">Team details</a></li>
    <li><a data-toggle="tab" href="#members">Members</a></li>
  </ul>

  <div class="tab-content">
    <div id="team" class="tab-pane fade in active row">

      <h3>Team details</h3>
        
        <form>

            <div class="form-group">
              <label class="control-label col-sm-2">
                  @Html.DisplayNameFor(model => model.Name)
              </label>
              <div class="col-sm-10">
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.Name)
                </p>
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-sm-2">
                  @Html.DisplayNameFor(model => model.Colour)
              </label>
              <div class="col-sm-10">
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.Colour)
                </p>
              </div>
            </div>

        </form>

        <button type="button" class="btn btn-info">
            @Html.ActionLink("Edit", "Edit", new { teamId=Model.TeamId })
        </button>
        <button type="button" class="btn btn-default">
            @Html.ActionLink("Back to List", "Index")
        </button>

    </div>
    <div id="members" class="tab-pane fade">
      <h3>Team members</h3>
        @if (Model.Members.Count() == 0)
        {
            <div class="alert alert-info">
                <strong>No team members! </strong> 
                <p>No members have been added to team @Model.Name yet!</p>
            </div>
        }
    else
    {
            <table class="table table-hover">
                <tr>
                    <th>
                        Employee number
                    </th>
                    <th>
                        Forename
                    </th>
                    <th>
                        Surname
                    </th>
                    <th>
                        Job title
                    </th>
                </tr>

    @foreach (var item in Model.Members)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Forename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
        </tr>
        }
    </table>
    }  
        <button type="button" class="btn btn-info">
            @Html.ActionLink("Add member", "AddMember", new { teamId=Model.TeamId })
        </button>
        <button type="button" class="btn btn-default">
            @Html.ActionLink("Back to List", "Index")
        </button>

      </div>
  </div>
</div>
