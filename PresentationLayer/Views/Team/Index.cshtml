@model IEnumerable<PresentationLayer.Models.Team>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (ViewBag.Message != null)
{ 
    <div class="alert alert-success">
    <strong>Member added! </strong> <p>@ViewBag.Message</p>
    </div>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Colour)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Colour)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { teamId=item.TeamId }) |
            @Html.ActionLink("Add members", "AddMember", new { teamId=item.TeamId }) |
            @Html.ActionLink("Details", "Details", new { teamId=item.TeamId }) |
            @Html.ActionLink("Delete", "Delete", new { teamId=item.TeamId })
        </td>
    </tr>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
}

@Styles.Render("~/bundles/bootstrap/css")

</table>
